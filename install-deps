#!/bin/bash

cmake --version
dpkg -l | grep cmake
dpkg -L cmake | grep bin

git --version
patch --version
ninja --version

exit 0

apt-get install -y --allow-unauthenticated clang-4.0 cmake git patch ninja-build
if [ $? -ne 0 ]
then
	while fuser -u -v /var/lib/dpkg/lock 
	do 
		echo wait
		sleep 5
	done
	apt-get install -y --allow-unauthenticated clang-4.0 cmake git patch ninja-build
fi
